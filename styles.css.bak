/* Full-screen video */
video {
    width: 100%;
    height: 100vh;
    object-fit: cover;
    position: fixed;
    top: 0;
    left: 0;
}

/* LOGO - Fixed at Top Center */
.logo {
    position: absolute;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: auto;
}

/* Overlay text container */
.overlay {
    position: absolute;
    top: 40%; /* Moved slightly down */
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: white;
    width: 90%;
}

/* Main title */
.main-title {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 10px;
}

/* Subtitle */
.subtitle {
    font-size: 2rem;
    margin-bottom: 10px;
	color: white; /* Default fallback */
}

/* Styling for "Sacred Journeys" */
.subtitle span.sacred {
    color: white;
}

/* Styling for "Seamless Comfort" */
.subtitle span.comfort {
    color: white;
}

/* BOOK NOW SECTION */
.book-now-container {
    position: absolute;
    bottom: 50px; /* Moved everything down */
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
}

/* Kashmir Group Tour Text */
.tour-title {
    font-size: 2rem;
    font-weight: bold;
    color: white;
    margin-bottom: 20px; /* Increased space between text and button */
}

/* Book Now Button */
.btn {
    display: inline-block;
    font-size: 1.2rem;
    padding: 12px 24px;
    background: #ff6600;
    color: white;
    border-radius: 8px;
    text-decoration: none;
    transition: 0.3s;
    margin-bottom: 10px; /* Adds space below the button */
}

/* Hover effect for Book Now Button */
.btn:hover {
  background: #25a0da;
  transform: scale(1.1);
}

/* Contact Icons */
.contact-icons {
    margin-top: 10px;
}

.contact-icons a {
    margin: 0 8px;
    display: inline-block;
    padding: 8px;              /* Adjust padding as needed for a larger circle */
    border-radius: 80%;        /* Makes the background circular */
	background: #25a0da;
    transition: background 0.3s, transform 0.3s;
}

.contact-icons a:hover {
    background: #ff6600;       /* Hover background color */
	transform: scale(1.1);   
}

.contact-icons img {
    width: 35px;               /* Adjust icon size */
    height: 35px;              /* Force a square to properly round the corners */
    border-radius: 10%;        /* Ensures the image itself is circular if it has transparent parts */
    display: block;
}

/* RESPONSIVE DESIGN */
@media (max-width: 768px) {
    .logo {
        width: 80px;
        top: 15px;
    }

    .overlay {
        top: 42%; /* Adjusted for mobile */
    }

    .main-title {
        font-size: 2rem;
    }

    .subtitle {
        font-size: 1.5rem;
    }

    .book-now-container {
        bottom: 30px; /* Lowering everything for mobile */
    }

    .tour-title {
        font-size: 1.8rem;
    }

    .btn {
        font-size: 1rem;
        padding: 10px 20px;
        margin-bottom: 15px;
    }

    .contact-icons img {
		margin-top: 15px;
        width: 25px; /* Smaller icons for mobile */
		height: 25px;
		border-radius: 10%;        /* Ensures the image itself is circular if it has transparent parts */
		display: block;
    }
}
