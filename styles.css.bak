/* Full-screen video */
video {
    width: 100%;
    height: 100vh;
    object-fit: cover;
    position: fixed;
    top: 0;
    left: 0;
}

/* LOGO - Fixed at Top Center */
.logo {
    position: absolute;
    top: 20px;  /* Stay at the top */
    left: 50%;
    transform: translateX(-50%);
    width: 100px; /* Adjust logo size */
    height: auto;
}

/* Overlay text container (For the Main Title & Subtitle) */
.overlay {
    position: absolute;
    top: 35%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: white;
    width: 90%;
}

/* Main title */
.main-title {
    font-size: 3rem;
    font-weight: bold;
	margin-bottom: 10px;
}

/* Subtitle */
.subtitle {
    font-size: 2rem;
    
}

/* BOOK NOW BUTTON - Fixed at Bottom Center */
.book-now-container {
    position: absolute;
    bottom: 40px;  /* Stay 40px from the bottom */
    left: 50%;
    transform: translateX(-50%);
}

.btn {
    display: inline-block;
    font-size: 1.2rem;
    padding: 12px 24px;
    background: #ff6600;
    color: white;
    border-radius: 8px;
    text-decoration: none;
    transition: 0.3s;
}

/* RESPONSIVE DESIGN FOR MOBILE */
@media (max-width: 768px) {
    .logo {
        width: 80px; /* Smaller logo for mobile */
        top: 15px;  /* Keep it at the top */
    }

    .main-title {
        font-size: 2rem;
    }

    .subtitle {
        font-size: 1.5rem;
    }

    .btn {
        font-size: 1rem;
        padding: 10px 20px;
    }
}
